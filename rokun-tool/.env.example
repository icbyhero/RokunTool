# RokunTool 环境配置示例
# 复制此文件为 .env.development 或 .env.production 并修改相应值

# ========================================
# 应用模式 (NODE_ENV)
# ========================================
# development: 开发模式
# production: 生产模式
NODE_ENV=development

# ========================================
# 插件沙箱配置
# ========================================
# 是否启用插件沙箱隔离
# - development: false (禁用沙箱,便于开发)
# - production: true (启用沙箱,确保安全)
SANDBOX_ENABLED=false

# 沙箱超时时间(毫秒)
# 开发模式可以设置为 Infinity 或较大的值
# 生产模式建议设置为 30000 (30秒)
SANDBOX_TIMEOUT=300000

# 是否启用沙箱严格模式
# - true: 严格模式,所有检查都启用
# - false: 宽松模式,跳过部分检查
SANDBOX_STRICT=false

# ========================================
# 插件开发配置
# ========================================
# 插件热重载
# 开发模式启用,生产模式禁用
PLUGIN_HOT_RELOAD=true

# 插件日志级别
# - debug: 详细调试信息
# - info: 一般信息
# - warn: 警告信息
# - error: 仅错误信息
PLUGIN_LOG_LEVEL=debug

# ========================================
# 权限系统配置
# ========================================
# 是否启用权限系统(生产模式必须启用)
PERMISSION_ENABLED=true

# 开发模式自动授予权限(仅开发模式)
PERMISSION_AUTO_GRANT=true

# ========================================
# UI 和调试配置
# ========================================
# 是否启用开发者工具
# 开发模式自动打开,生产模式通过快捷键打开
DEVTOOLS_AUTO_OPEN=true

# 是否显示调试信息
SHOW_DEBUG_INFO=true

# ========================================
# 性能监控
# ========================================
# 是否启用性能监控
# 开发模式启用,生产模式可选
PERFORMANCE_MONITORING=true

# ========================================
# 错误报告
# ========================================
# 是否启用错误报告
# 开发模式: 控制台显示
# 生产模式: 发送到远程(可选)
ERROR_REPORTING_ENABLED=false

# ========================================
# 文件系统配置
# ========================================
# 用户数据目录
# 开发模式可以使用临时目录
# 生产模式使用系统用户数据目录
USER_DATA_PATH=~/Library/Application Support/RokunTool/dev

# ========================================
# 更新配置
# ========================================
# 是否自动检查更新
# 开发模式禁用,生产模式启用
AUTO_UPDATE_ENABLED=false

# 更新检查间隔(小时)
UPDATE_CHECK_INTERVAL=24
